<Window x:Class="OFFer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition> 
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBox Text="{Binding Log}" Grid.RowSpan="2" Margin="4" Grid.ColumnSpan="3">
            </TextBox>
            <Button Grid.Row="2" Grid.Column="3" Margin="4" Command="{Binding RunCmd}">Start/Stop</Button>
            <ProgressBar IsIndeterminate="{Binding IsRun}" Grid.Row="2" Grid.ColumnSpan="2" Margin="4"></ProgressBar>
        </Grid>
    </Grid>
</Window>
